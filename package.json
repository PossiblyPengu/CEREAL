{
  "name": "cereal-launcher",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/PossiblyPengu/CEREAL.git"
  },
  "description": "A unified game launcher with integrated PlayStation Remote Play (chiaki-ng) and Xbox Cloud Gaming",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "powershell -ExecutionPolicy Bypass -File scripts/run.ps1",
    "dev:verbose": "powershell -ExecutionPolicy Bypass -File scripts/run.ps1 -Verbose",
    "build": "node scripts/build.js",
    "build:app": "electron-builder",
    "dev:skip-chiaki": "powershell -ExecutionPolicy Bypass -File scripts/run.ps1 -SkipChiaki",
    
    "release": "powershell -ExecutionPolicy Bypass -File scripts/publish-release.ps1",
    "pack": "electron-builder --dir"
  },
  "author": "Andrew",
  "license": "MIT",
  "devDependencies": {
    "electron": "^34.0.0",
    "electron-builder": "^26.0.0"
  },
  "dependencies": {
    "discord-rpc": "^4.0.1"
  },
  "build": {
    "appId": "com.andrew.cereal-launcher",
    "productName": "Cereal",
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "directories": {
      "output": "dist"
    },
    "extraResources": [],
    "asarUnpack": [],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "license": "LICENSES.md"
    }
  }
}
